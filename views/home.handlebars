<h2>The Tech Blog</h2>
{{#each posts as |post|}}
<form class="form">
  <div class="form-group">
    <h3>{{post.title}}</h3>
  </div>
  <div class="form-group">
    <p>{{post.description}}</p>
  </div>
  <div class="form-group">
    <p>Posted by {{post.author}} on {{post.created_on}}</p>
  </div>
  {{#if session.loggedIn}}
  <div class="form-group">
  <button class="btn btn-info" id="addComment" type="button">Comment</button>
  </div>
  {{/if}}
</form>
{{/each}}